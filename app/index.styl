@import '../node_modules/muicss/lib/css/mui.min.css'

html, body
  font-family 'Segoe UI', sans-serif

pre, code
  font-family Consolas, monospace

pre.error-message-pre
  font-size 90%
  color #aa0000

// ## Treeview

.treeview-root ul
  list-style none
  padding-left 0

.treeview-root > ul
  & > li:first-child
    padding-top 15px

.treeview-root strong
  display block
  padding 15px 11px
  &:before
    font-family 'Segoe MDL2 Assets'
    font-size 80%
    content "\e00f"
    padding-right 0.5em
  &.active:before
    content "\e011"

.treeview-root strong,
.treeview-leaf
  cursor pointer
  &:hover
    background-color #e0e0e0

.treeview-root strong + ul > li,
.treeview-root > ul > li.treeview-leaf
  padding 6px 22px

.treeview-root > ul > li.treeview-leaf
  padding-left 11px
  padding-right 11px

// ## Sidebar
html, body
  height 100%
  background-color #eee

html, body, input, textarea, buttons
  -webkit-font-smoothing antialiased
  text-shadow 1px 1px 1px rgba(0, 0, 0, 0.004)

#sidedrawer
  position fixed
  top 0
  bottom 0
  width 200px
  left -200px
  overflow auto
  z-index 2
  background-color white
  transition transform 0.2s

#content-wrapper
  min-height 100%
  overflow-x hidden
  margin-left 0
  transition margin-left 0.2s
  margin-bottom -160px
  padding-bottom 160px

@media (min-width 350px)
  #sidedrawer
    transform translate(200px)

  #content-wrapper
    margin-left 200px

#sidedrawer.active
  transform translate(200px)

@keyframes load
  100% { transform: rotate(360deg); }

// ## Throbber

.throbber
  background-image url('./throbber-medium.svg')
  height 20px
  width 20px
  margin 2em auto

// ## Preview

.preview-box
  margin 10px
  background-color #a0a0a0
  display inline-block

.preview-box > div
  display flex
  height 100%
  justify-content center

.preview-box img
  align-self center

f = 0.7 // resizing factor // TODO: DPI-related?
sw = 71px
sh = 71px
mw = 150px
mh = 150px
// See: https://msdn.microsoft.com/en-us/library/windows/desktop/jj673981(v=vs.85).aspx
ss = 0.5
ms = 1 / 3

.preview-box-medium
  height mh * f
  width mw * f
  img
    height mh * ms * f
    width mw * ms * f

.preview-box-small
  height sh * f
  width sw * f
  img
    height sh * ss * f
    width sw * ss * f
